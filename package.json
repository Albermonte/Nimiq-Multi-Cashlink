{
	"name": "svelte-app",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"build": "npm run build:tailwind && rollup -c",
		"dev": "rollup -c -w",
		"start": "sirv public -s --no-clear",
		"format": "prettier --write --plugin-search-dir=. ./**/*.{html,ts,svelte}",
		"validate": "svelte-check",
		"build:tailwind": "cross-env NODE_ENV=production postcss src/tailwind.css -o public/global.css"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^18.0.0",
		"@rollup/plugin-node-resolve": "^11.0.0",
		"@rollup/plugin-replace": "^2.4.2",
		"@rollup/plugin-typescript": "^8.0.0",
		"@tsconfig/svelte": "^1.0.0",
		"autoprefixer": "^10.2.5",
		"cross-env": "^7.0.3",
		"cssnano": "^5.0.2",
		"nimiq-svelte-stores": "^1.4.0",
		"postcss": "^8.2.13",
		"postcss-cli": "^8.3.1",
		"postcss-load-config": "^3.0.1",
		"prettier": "^2.2.1",
		"prettier-plugin-svelte": "^2.2.0",
		"rollup": "^2.46.0",
		"rollup-plugin-css-only": "^3.1.0",
		"rollup-plugin-livereload": "^2.0.0",
		"rollup-plugin-svelte": "^7.0.0",
		"rollup-plugin-terser": "^7.0.0",
		"sass": "^1.32.12",
		"svelte": "^3.38.0",
		"svelte-check": "^1.5.2",
		"svelte-preprocess": "^4.7.2",
		"svelte-share-buttons-component": "git+https://github.com/Albermonte/svelte-share-buttons-component.git",
		"tailwindcss": "^2.1.2",
		"tslib": "^2.0.0",
		"typescript": "^4.0.0"
	},
	"dependencies": {
		"@macfja/svelte-persistent-store": "^1.1.0",
		"@nimiq/core-web": "^1.5.8",
		"@nimiq/hub-api": "^1.4.2-beta.0",
		"@nimiq/utils": "^0.7.0",
		"@tailwindcss/typography": "^0.4.0",
		"sirv-cli": "^1.0.0",
		"svelte-routing": "^1.6.0",
		"svelte-simple-modal": "^0.10.1"
	}
}
